<%= stylesheet_link_tag "product_detail", "data-turbo-track": "reload" %>

<div class="product-detail-page">
  <div class="main-content">
    <div class="container">
      <!-- 프로필 헤더 -->
      <div class="profile-header">
        <div class="profile-avatar">
          <% if @user.avatar.attached? %>
            <img src="<%= url_for(@user.avatar) %>" alt="<%= @user.name %>">
          <% elsif @user.avatar_url.present? %>
            <img src="<%= @user.avatar_url %>" alt="<%= @user.name %>">
          <% else %>
            <div class="avatar-placeholder">
              <%= @user.name[0].upcase %>
            </div>
          <% end %>
        </div>
        <div class="profile-info">
          <h1 class="profile-name"><%= @user.name %></h1>
          <% if @user.job_title.present? %>
            <p class="profile-job-title" style="color: #3b82f6; font-weight: 500; margin: 0 0 0.5rem 0;"><%= @user.job_title %></p>
          <% end %>
          <p class="profile-email"><%= @user.email %></p>
          <p class="profile-joined">가입일: <%= @user.created_at.strftime('%Y년 %m월 %d일') %></p>
        </div>
      </div>

      <!-- 탭 네비게이션 -->
      <div class="profile-tabs">
        <button class="tab-btn active" onclick="switchTab('activity')">
          <i class="fas fa-heart"></i>
          활동 내역
        </button>
        <button class="tab-btn" onclick="switchTab('products')">
          <i class="fas fa-box"></i>
          등록한 제품 (<%= @my_products.count %>)
        </button>
        <button class="tab-btn" onclick="switchTab('edit')">
          <i class="fas fa-user-edit"></i>
          프로필 편집
        </button>
      </div>

      <!-- 탭 콘텐츠 -->
      <div class="tab-content">
        <!-- 활동 내역 탭 -->
        <div id="activity-tab" class="tab-pane active">
          <!-- 좋아요한 제품 -->
          <section class="activity-section">
            <h2>좋아요한 제품 (<%= @liked_products.count %>)</h2>
            <% if @liked_products.any? %>
              <div class="activity-products-grid">
                <% @liked_products.each do |product| %>
                  <% like = product.likes.find_by(user: @user) %>
                  <div class="activity-product-card">
                    <%= link_to product_path(product), class: "product-card-link" do %>
                      <div class="product-card-image">
                        <% if product.cover_url.present? %>
                          <%= image_tag product.cover_url, alt: product.name %>
                        <% elsif product.cover_image.attached? %>
                          <%= image_tag product.cover_image, alt: product.name %>
                        <% else %>
                          <%= image_tag "https://images.unsplash.com/photo-1517077304055-6e89abbf09b0?w=400&h=300&fit=crop", alt: product.name %>
                        <% end %>
                      </div>
                      <div class="product-card-content">
                        <h3 class="product-card-title"><%= product.name %></h3>
                        <p class="product-card-tagline"><%= truncate(product.tagline, length: 60) %></p>
                        <div class="product-card-meta">
                          <span class="meta-item">
                            <i class="fas fa-arrow-up"></i> <%= product.votes_count %>
                          </span>
                          <span class="meta-item">
                            <i class="fas fa-arrow-up"></i> <%= product.likes_count %>
                          </span>
                          <span class="meta-item">
                            <i class="fas fa-comment"></i> <%= product.comments_count %>
                          </span>
                        </div>
                      </div>
                    <% end %>
                    <div class="product-card-date">
                      <i class="fas fa-arrow-up" style="color: #f97316;"></i>
                      좋아요 <%= like ? time_ago_in_words(like.created_at) + " 전" : "" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="empty-state">
                <i class="fas fa-arrow-up"></i>
                <p>아직 좋아요한 제품이 없습니다.</p>
              </div>
            <% end %>
          </section>

          <!-- 작성한 댓글 -->
          <section class="activity-section">
            <h2>작성한 댓글 (<%= @comments.count %>)</h2>
            <% if @comments.any? %>
              <div class="comments-list">
                <% @comments.each do |comment| %>
                  <div class="comment-item">
                    <div class="comment-header">
                      <strong><%= link_to comment.product.name, product_path(comment.product) %></strong>
                      <span class="comment-date"><%= time_ago_in_words(comment.created_at) %> 전</span>
                    </div>
                    <p class="comment-body"><%= truncate(comment.body, length: 200) %></p>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="empty-state">
                <i class="fas fa-comment"></i>
                <p>아직 작성한 댓글이 없습니다.</p>
              </div>
            <% end %>
          </section>

          <!-- 작성한 리뷰 -->
          <section class="activity-section">
            <h2>작성한 리뷰 (<%= @reviews.count %>)</h2>
            <% if @reviews.any? %>
              <div class="reviews-list">
                <% @reviews.each do |review| %>
                  <div class="review-item">
                    <div class="review-header">
                      <strong><%= link_to review.product.name, product_path(review.product) %></strong>
                      <div class="review-rating">
                        <% review.rating.times do %>
                          <i class="fas fa-star" style="color: #fbbf24;"></i>
                        <% end %>
                        <% (5 - review.rating).times do %>
                          <i class="fas fa-star" style="color: #d1d5db;"></i>
                        <% end %>
                      </div>
                      <span class="review-date"><%= time_ago_in_words(review.created_at) %> 전</span>
                    </div>
                    <p class="review-content"><%= truncate(review.content, length: 200) %></p>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="empty-state">
                <i class="fas fa-star"></i>
                <p>아직 작성한 리뷰가 없습니다.</p>
              </div>
            <% end %>
          </section>
        </div>

        <!-- 등록한 제품 탭 -->
        <div id="products-tab" class="tab-pane">
          <% if @my_products.any? %>
            <div class="activity-products-grid">
              <% @my_products.each do |product| %>
                <div class="activity-product-card">
                  <%= link_to product_path(product), class: "product-card-link" do %>
                    <div class="product-card-image">
                      <% if product.cover_url.present? %>
                        <%= image_tag product.cover_url, alt: product.name %>
                      <% elsif product.cover_image.attached? %>
                        <%= image_tag product.cover_image, alt: product.name %>
                      <% else %>
                        <%= image_tag "https://images.unsplash.com/photo-1517077304055-6e89abbf09b0?w=400&h=300&fit=crop", alt: product.name %>
                      <% end %>
                    </div>
                    <div class="product-card-content">
                      <h3 class="product-card-title"><%= product.name %></h3>
                      <p class="product-card-tagline"><%= truncate(product.tagline, length: 60) %></p>
                      <div class="product-card-meta">
                        <span class="meta-item">
                          <i class="fas fa-arrow-up"></i> <%= product.votes_count %>
                        </span>
                        <span class="meta-item">
                          <i class="fas fa-arrow-up"></i> <%= product.likes_count %>
                        </span>
                        <span class="meta-item">
                          <i class="fas fa-comment"></i> <%= product.comments_count %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                  <div class="product-card-date">
                    <i class="fas fa-clock" style="color: #3b82f6;"></i>
                    등록 <%= time_ago_in_words(product.created_at) %> 전
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="empty-state">
              <i class="fas fa-box"></i>
              <p>아직 등록한 제품이 없습니다.</p>
              <%= link_to "제품 등록하기", new_product_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>

        <!-- 프로필 편집 탭 -->
        <div id="edit-tab" class="tab-pane">
          <section class="edit-section">
            <%= form_with model: @user, url: my_path, method: :patch, local: true, class: "profile-form" do |form| %>
              <h3 style="margin-top: 0; margin-bottom: 1.5rem; color: #1e293b;">기본 정보</h3>

              <div class="form-group">
                <%= form.label :name, "이름" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">실제 이름을 입력하세요 (예: 홍길동)</small>
                <%= form.text_field :name, class: "form-control", placeholder: "홍길동" %>
              </div>

              <div class="form-group">
                <%= form.label :email, "이메일" %>
                <%= form.email_field :email, class: "form-control", placeholder: "your@email.com" %>
              </div>

              <h3 style="margin-top: 2rem; margin-bottom: 1.5rem; color: #1e293b;">프로필 이미지</h3>

              <div class="form-group">
                <%= form.label :avatar, "프로필 사진 업로드" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">직접 이미지 파일을 업로드하세요</small>
                <%= form.file_field :avatar, accept: "image/*", class: "form-control", style: "padding: 0.5rem;" %>
                <% if @user.avatar.attached? %>
                  <div style="margin-top: 0.75rem;">
                    <img src="<%= url_for(@user.avatar) %>" alt="현재 프로필" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;">
                  </div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :avatar_url, "또는 프로필 이미지 URL" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">외부 이미지 URL을 사용하고 싶다면 입력하세요</small>
                <%= form.text_field :avatar_url, class: "form-control", placeholder: "https://example.com/avatar.jpg" %>
              </div>

              <h3 style="margin-top: 2rem; margin-bottom: 1.5rem; color: #1e293b;">소개</h3>

              <div class="form-group">
                <%= form.label :job_title, "직책" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">예: CEO, CTO, Product Manager, Designer 등</small>
                <%= form.text_field :job_title, class: "form-control", placeholder: "CEO & Founder" %>
              </div>

              <div class="form-group">
                <%= form.label :bio, "자기소개" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">제품 상세 페이지 팀원 소개에 표시됩니다</small>
                <%= form.text_area :bio, rows: 4, class: "form-control", placeholder: "혁신적인 제품 개발과 팀 운영을 담당하고 있습니다." %>
              </div>

              <h3 style="margin-top: 2rem; margin-bottom: 1.5rem; color: #1e293b;">소셜 링크</h3>

              <div class="form-group">
                <%= form.label :website, "웹사이트" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">개인 웹사이트나 블로그 URL</small>
                <%= form.text_field :website, class: "form-control", placeholder: "https://yourwebsite.com" %>
              </div>

              <div class="form-group">
                <%= form.label :twitter_url, "Twitter (X) URL" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">예: https://twitter.com/yourusername</small>
                <%= form.text_field :twitter_url, class: "form-control", placeholder: "https://twitter.com/yourusername" %>
              </div>

              <div class="form-group">
                <%= form.label :linkedin_url, "LinkedIn URL" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">예: https://linkedin.com/in/yourusername</small>
                <%= form.text_field :linkedin_url, class: "form-control", placeholder: "https://linkedin.com/in/yourusername" %>
              </div>

              <div class="form-group">
                <%= form.label :github_url, "GitHub URL" %>
                <small style="display: block; color: #64748b; margin-top: 0.25rem;">예: https://github.com/yourusername</small>
                <%= form.text_field :github_url, class: "form-control", placeholder: "https://github.com/yourusername" %>
              </div>

              <div class="form-actions">
                <%= form.submit "프로필 업데이트", class: "btn btn-primary" %>
              </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
