<!-- 새로운 랭킹 리스트 (메인페이지 스타일 제품 카드 사용) -->
<div class="rankboard-products-section">
  <% if @products && @products.any? %>
    <!-- 제품 카드 그리드 -->
    <div class="product-list" style="display: grid; gap: 1rem;">
      <% @products.each_with_index do |product, index| %>
        <%= render 'shared/product_card', product: product, index: index %>
      <% end %>
    </div>

  <% else %>
    <div class="empty-state" style="text-align: center; padding: 4rem 1rem; color: #94a3b8;">
      <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
      <h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; color: #64748b;"><%= @empty_message || "해당 기간에 등록된 제품이 없습니다" %></h3>
      <p style="color: #94a3b8;">다른 기간을 선택해보세요.</p>
    </div>
  <% end %>
</div>
