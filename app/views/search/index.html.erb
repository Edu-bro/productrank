  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8660 100%);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-size: 0.9rem;
  font-weight: 600;
  transition: all 0.2s ease;
}

.view-full-ranking:hover {
  background: linear-gradient(135deg, #e55a2b 0%, #e67a56 100%);
  text-decoration: none;
  color: white;
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
