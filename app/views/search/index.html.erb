<div class="search-results-page">
  <!-- 검색 헤더 -->
  <div class="search-header">
    <h1 class="search-title">제품 검색</h1>
    
    <!-- 검색 폼 -->
    <%= form_with url: search_path, method: :get, local: true, class: "search-form-container" do |form| %>
      <div style="position: relative;">
        <i class="fas fa-search search-icon-large"></i>
        <%= form.text_field :q, 
            value: @query, 
            placeholder: "제품, 기능, 카테고리를 검색해보세요...", 
            class: "search-input-large",
            autocomplete: "off" %>
      </div>
      
      <!-- 검색 통계 -->
      <% if @query.present? %>
        <div class="search-stats">
          "<strong><%= @query %></strong>" 검색 결과 총 <strong><%= @total_count %>개</strong>
        </div>
      <% end %>
      
      <!-- 숨겨진 필드들 -->
      <%= form.hidden_field :category, value: @category %>
      <%= form.hidden_field :sort, value: @sort_by %>
      <%= form.hidden_field :type, value: @search_type %>
    <% end %>
    
    <!-- 검색 타입 및 필터 옵션 -->
    <div class="search-filters">
      <select class="filter-dropdown" onchange="updateSearchType(this.value)">
        <option value="all" <%= 'selected' if @search_type == 'all' %>>전체</option>
        <option value="products" <%= 'selected' if @search_type == 'products' %>>제품</option>
        <option value="users" <%= 'selected' if @search_type == 'users' %>>사용자</option>
        <option value="community" <%= 'selected' if @search_type == 'community' %>>커뮤니티</option>
      </select>
      
      <% if @search_type == 'products' || @search_type == 'all' %>
        <select class="filter-dropdown" onchange="updateCategory(this.value)">
          <option value="">전체 카테고리</option>
          <% @categories[1..-1].each do |category| %>
            <option value="<%= category[:slug] %>" <%= 'selected' if @category == category[:slug] %>>
              <%= category[:name] %>
            </option>
          <% end %>
        </select>
        
        <select class="filter-dropdown" onchange="updateSort(this.value)">
          <option value="relevance" <%= 'selected' if @sort_by == 'relevance' %>>관련도순</option>
          <option value="newest" <%= 'selected' if @sort_by == 'newest' %>>최신순</option>
          <option value="popular" <%= 'selected' if @sort_by == 'popular' %>>인기순</option>
          <option value="trending" <%= 'selected' if @sort_by == 'trending' %>>급상승</option>
        </select>
      <% end %>
    </div>
  </div>

  <!-- 검색 결과 -->
  <% if @query.present? %>
    <% if @total_count > 0 %>
      <% if @search_type == 'all' %>
        <!-- 전체 검색 결과 -->
        <% if @results.any? %>
          <h3 style="margin-bottom: 1rem; color: #333;">제품 (<%= @results.count %>개)</h3>
          <div class="search-results-grid">
            <% @results.first(6).each do |product| %>
              <%= render 'product_card', product: product %>
            <% end %>
          </div>
          <% if @results.count > 6 %>
            <div style="text-align: center; margin: 1rem 0;">
              <%= link_to "제품 더 보기", search_path(q: @query, type: 'products'), class: "suggested-search" %>
            </div>
          <% end %>
        <% end %>
        
        <% if @users.any? %>
          <h3 style="margin: 2rem 0 1rem 0; color: #333;">사용자 (<%= @users.count %>개)</h3>
          <div class="search-results-grid">
            <% @users.each do |user| %>
              <%= render 'user_card', user: user %>
            <% end %>
          </div>
        <% end %>
        
        <% if @comments.any? %>
          <h3 style="margin: 2rem 0 1rem 0; color: #333;">커뮤니티 (<%= @comments.count %>개)</h3>
          <div class="search-results-grid">
            <% @comments.each do |comment| %>
              <%= render 'comment_card', comment: comment %>
            <% end %>
          </div>
        <% end %>
        
        <% if @leaderboards&.any? %>
          <h3 style="margin: 2rem 0 1rem 0; color: #333;">관련 랭킹 (<%= @leaderboards.count %>개)</h3>
          <div class="leaderboards-container">
            <% @leaderboards.each do |leaderboard| %>
              <%= render 'leaderboard_card', leaderboard: leaderboard %>
            <% end %>
          </div>
        <% end %>
      <% elsif @search_type == 'products' && @results.any? %>
        <!-- 제품 검색 결과 -->
        <div class="search-results-grid">
          <% @results.each do |product| %>
            <%= render 'product_card', product: product %>
          <% end %>
        </div>
      <% elsif @search_type == 'users' && @users.any? %>
        <!-- 사용자 검색 결과 -->
        <div class="search-results-grid">
          <% @users.each do |user| %>
            <%= render 'user_card', user: user %>
          <% end %>
        </div>
      <% elsif @search_type == 'community' && @comments.any? %>
        <!-- 커뮤니티 검색 결과 -->
        <div class="search-results-grid">
          <% @comments.each do |comment| %>
            <%= render 'comment_card', comment: comment %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- 검색 결과 없음 -->
      <div class="no-results">
        <i class="fas fa-search no-results-icon"></i>
        <h3 class="no-results-title">검색 결과가 없습니다</h3>
        <p class="no-results-text">다른 검색어를 시도해보세요.</p>
        
        <!-- 추천 검색어 -->
        <div class="suggested-searches">
          <% ['Notion', 'AI', '생산성', '디자인', '개발', '마케팅'].each do |suggestion| %>
            <%= link_to search_path(q: suggestion), class: "suggested-search" do %>
              <%= suggestion %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- 검색어가 없을 때 -->
    <div class="no-results">
      <i class="fas fa-search no-results-icon"></i>
      <h2 class="no-results-title">제품을 검색해보세요</h2>
      <p class="no-results-text">찾고 있는 제품의 이름이나 카테고리를 입력해주세요.</p>
      
      <!-- 인기 검색어 -->
      <div class="suggested-searches">
        <% ['Notion', 'ChatGPT', 'Figma', '생산성 도구', 'AI 도구', '디자인 툴'].each do |popular| %>
          <%= link_to search_path(q: popular), class: "suggested-search" do %>
            <%= popular %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- 검색 필터 및 자동완성 JavaScript -->
<script>
// 필터 업데이트 함수들
function updateSearchType(value) {
  const url = new URL(window.location);
  url.searchParams.set('type', value);
  // 타입이 변경되면 카테고리와 정렬을 초기화
  if (value !== 'products' && value !== 'all') {
    url.searchParams.delete('category');
    url.searchParams.delete('sort');
  }
  window.location = url;
}

function updateCategory(value) {
  const url = new URL(window.location);
  if (value) {
    url.searchParams.set('category', value);
  } else {
    url.searchParams.delete('category');
  }
  window.location = url;
}

function updateSort(value) {
  const url = new URL(window.location);
  url.searchParams.set('sort', value);
  window.location = url;
}

// 자동완성 기능
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search-input');
  const suggestionsContainer = document.getElementById('search-suggestions');
  let debounceTimeout;
  
  if (searchInput && suggestionsContainer) {
    searchInput.addEventListener('input', function() {
      const query = this.value.trim();
      
      clearTimeout(debounceTimeout);
      
      if (query.length >= 2) {
        debounceTimeout = setTimeout(() => {
          fetchSuggestions(query);
        }, 300);
      } else {
        hideSuggestions();
      }
    });
    
    searchInput.addEventListener('blur', function() {
      // 클릭 이벤트를 위해 약간의 지연
      setTimeout(() => {
        hideSuggestions();
      }, 200);
    });
    
    function fetchSuggestions(query) {
      fetch(`/search/suggestions?q=${encodeURIComponent(query)}`)
        .then(response => response.json())
        .then(data => {
          displaySuggestions(data.suggestions);
        })
        .catch(error => {
          console.error('Error fetching suggestions:', error);
          hideSuggestions();
        });
    }
    
    function displaySuggestions(suggestions) {
      if (suggestions.length === 0) {
        hideSuggestions();
        return;
      }
      
      const suggestionItems = suggestions.map(suggestion => `
        <div class="suggestion-item px-4 py-2 hover:bg-gray-100 cursor-pointer" data-value="${suggestion}">
          ${suggestion}
        </div>
      `).join('');
      
      suggestionsContainer.innerHTML = suggestionItems;
      suggestionsContainer.classList.remove('hidden');
      
      // 클릭 이벤트 추가
      suggestionsContainer.querySelectorAll('.suggestion-item').forEach(item => {
        item.addEventListener('click', function() {
          const value = this.getAttribute('data-value');
          searchInput.value = value;
          hideSuggestions();
          // 검색 실행
          window.location.href = `/search?q=${encodeURIComponent(value)}`;
        });
      });
    }
    
    function hideSuggestions() {
      suggestionsContainer.classList.add('hidden');
    }
  }
});
</script>
